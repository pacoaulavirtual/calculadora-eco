<script>
        // Simple dark mode toggle for demonstration (usually handled by system preference or settings)
        // This ensures the preview looks correct based on OS or user choice
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }
        // Interactive Elements Script
        const cards = document.querySelectorAll('.selection-card');
        cards.forEach(card => {
            card.addEventListener('click', function() {
                // Remove selected from siblings
                const parent = this.parentElement;
                parent.querySelectorAll('.selection-card').forEach(c => {
                    c.classList.remove('selected', 'border-primary');
                    c.classList.add('border-transparent');
                    const icon = c.querySelector('.absolute .material-icons-round');
                    if(icon) {
                        icon.textContent = 'radio_button_unchecked';
                        icon.classList.remove('text-primary');
                        icon.classList.add('text-gray-400');
                        icon.parentElement.classList.remove('opacity-100');
                        icon.parentElement.classList.add('opacity-0', 'group-hover:opacity-100');
                    }
                });
                // Add selected to clicked
                this.classList.add('selected');
                const icon = this.querySelector('.absolute .material-icons-round');
                if(icon) {
                    icon.textContent = 'check_circle';
                    icon.classList.remove('text-gray-400');
                    icon.classList.add('text-primary');
                    icon.parentElement.classList.remove('opacity-0', 'group-hover:opacity-100');
                    icon.parentElement.classList.add('opacity-100');
                }
            });
        });
    </script>

